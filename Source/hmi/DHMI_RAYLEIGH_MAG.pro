PRO DHMI_RAYLEIGH_MAG,GROUP_LEADER=GROUP_LEADER,VERBOSE=VERBOSE

  IF KEYWORD_SET(VERBOSE) THEN BEGIN
    IVERBOSE=1
    PRINT,'DHMI_RAYLEIGH_MAG: STARTING RAYLEIGH WIDGET ROUTINE'
  ENDIF ELSE IVERBOSE=0
  

  IF KEYWORD_SET(VERBOSE) THEN BEGIN
    IVERBOSE=1
    PRINT,'DHMI_RAYLEIGH_MAG: STARTING INGEST WIDGET ROUTINE'
  ENDIF ELSE IVERBOSE=0
  
  IF STRUPCASE(!VERSION.OS_FAMILY) EQ 'WINDOWS' THEN WIN_FLAG = 1 ELSE WIN_FLAG = 0

;--------------------------
; FIND MAIN DIMITRI FOLDER AND DELIMITER

  CD, CURRENT=CDIR
  DL = GET_DIMITRI_LOCATION('DL')
  INPUT_FOLDER  = GET_DIMITRI_LOCATION('INGESTION_OUTPUT')
  
;--------------------------
; GET LIST OF ALL SITE NAMES
  
  IF KEYWORD_SET(VERBOSE) THEN PRINT,'DHMI_RAYLEIGH_MAG: SEARCHING FOR SITE FOLDERS'  
  
  RES = FILE_INFO(INPUT_FOLDER)
  IF RES.EXISTS NE 1 OR RES.DIRECTORY NE 1 THEN BEGIN
    IF KEYWORD_SET(VERBOSE) THEN PRINT, INPUT_FOLDER + " FOLDER DOESN'T EXIST, CREATION"
    FILE_MKDIR, INPUT_FOLDER
  ENDIF
  CD,INPUT_FOLDER

  SITE_SEARCH = FILE_SEARCH('Site_*',/TEST_DIRECTORY)

  SENS_SEARCH = STRARR(30)
  PROC_SEARCH = STRARR(30)
  YEAR_SEARCH = STRING(INDGEN(15)+2000,FORMAT='(I4)')
  YEAR_SEARCH = ['ALL',YEAR_SEARCH]

  ; GET SITE LIST

 ; FILTER OUT SITE LIST WITH ONLY SITE TYPE = OCEAN > RAYLEIGH METHOD IS ONLY VALID FOR OCEAN TYPE
  INC_SG = 0
  CD, CDIR
  SITE_RAY_SEARCH=''
  FOR IDXSITE=0,N_ELEMENTS(SITE_SEARCH)-1 DO BEGIN
    CUR_SITE= SITE_SEARCH(IDXSITE)  ; GET CURRENT SITE / REMOVE 'Site_' PREFIX
    CUR_SITE_TYPE = GET_SITE_TYPE(STRMID(CUR_SITE,5))
    IF STRCMP(CUR_SITE_TYPE,'OCEAN',/FOLD_CASE) THEN BEGIN
      IF INC_SG EQ 0 THEN SITE_RAY_SEARCH = CUR_SITE ELSE SITE_RAY_SEARCH = [ SITE_RAY_SEARCH , CUR_SITE ]  
      INC_SG=INC_SG+1
    ENDIF
  ENDFOR
  SITE_SEARCH = SITE_RAY_SEARCH ; OVERWRITE SITE LIST WITH ONLY OCEAN SITES 
  
  IF SITE_SEARCH[0] EQ '' THEN BEGIN
    MSG='DHMI_RAYLEIGH_MAG: ERROR, NO OCEAN SITES FOUND IN INPUT FOLDER, PLEASE INGEST L1B PRODUCTS FOR RAYLEIGH FIRST!'
    TMP = DIALOG_MESSAGE(MSG,/ERROR,/CENTER)
    RETURN
  ENDIF  

;--------------------------
; SET THE FIRST SITE FOUND AS DEFAULT

  IF KEYWORD_SET(VERBOSE) THEN PRINT,'DHMI_RAYLEIGH_MAG: GETTING INFO FOR FIRST SITE FOLDER FOUND' 
  FIRST_SITE_FOLDER = SITE_SEARCH[0]
  TEMP = STRPOS(FIRST_SITE_FOLDER,'Site_',/REVERSE_SEARCH)
  FIRST_SITE = STRMID(FIRST_SITE_FOLDER,TEMP+5,STRLEN(FIRST_SITE_FOLDER)-TEMP)

;--------------------------
; GET AVAILABLE SENSORS IN FIRST SITE 

  IF KEYWORD_SET(VERBOSE) THEN PRINT,'DHMI_RAYLEIGH_MAG: SEARCHING FOR SENSORS WITHIN FIRST SITE' 
  CD,INPUT_FOLDER+FIRST_SITE_FOLDER
  SEARCH = FILE_SEARCH('*',/TEST_DIRECTORY)
  NSENS = N_ELEMENTS(SEARCH)
  SENS_SEARCH[0:NSENS-1] =SEARCH
  FIRST_SENSOR = SEARCH[0]

;--------------------------
; GET AVAILABLE PROC VERS FOR 
; FIRST SENSORS IN FIRST SITE

  IF KEYWORD_SET(VERBOSE) THEN PRINT,'DHMI_RAYLEIGH_MAG: SEARCHING FOR PROCESSING VERSIONS WITHIN FIRST SENSOR'   
  CD, INPUT_FOLDER+FIRST_SITE_FOLDER+DL+FIRST_SENSOR
  SEARCH = FILE_SEARCH('Proc_*',/TEST_DIRECTORY)
  NPROC = N_ELEMENTS(SEARCH)
  PROC_SEARCH[0:NPROC-1] =SEARCH
  FIRST_PROC = STRMID(PROC_SEARCH[0],5,STRLEN(PROC_SEARCH[0])-5)

  ;--------------------------
  ; RETURN TO ORIGNAL DIRECTORY
  
  IF KEYWORD_SET(VERBOSE) THEN PRINT,'DHMI_RAYLEIGH_MAG: RESETTING THE CURRENT DIRECTORY'
  CD, CDIR

;--------------------------
; GET AVAILABLE YEARS

  NYEAR = N_ELEMENTS(YEAR_SEARCH)
  FIRST_YEAR = YEAR_SEARCH[0]

;--------------------------
; GET AVAILABLE AUX DATA
IF KEYWORD_SET(VERBOSE) THEN PRINT,'DHMI_RAYLEIGH_MAG: SEARCHING FOR AUX DATA'
  AUX_DATA_FILE  = GET_DIMITRI_LOCATION('AUX_DATA')
  AUX_DATA_FULL  = STRING(READ_BINARY(AUX_DATA_FILE))
  AUX_DATA_CHANNELS  = STRSPLIT(AUX_DATA_FULL,STRING(STRING(10B)+STRING(13B)),/EXTRACT)
  AUX_DATA_CHANNELS_NB = N_ELEMENTS(AUX_DATA_CHANNELS)         ; DATA from CONFIGURATION FILE
  
  IF AUX_DATA_CHANNELS_NB EQ 0 THEN BEGIN
    MSG='DHMI_RAYLEIGH_MAG: ERROR, NO AUXDAT FOUND IN FILE AUX_DATA !'
    TMP = DIALOG_MESSAGE(MSG,/ERROR,/CENTER)
    RETURN
  ENDIF

;------------------------------------ 
; GET THE DISPLAY RESOLUTION FOR WIDGET POSITIONING

  IF KEYWORD_SET(VERBOSE) THEN PRINT,'DHMI_RAYLEIGH_MAG: RETRIEVEING SCREEN DIMENSIONS FOR WIDGET' 
  DIMS  = GET_SCREEN_SIZE()
  XSIZE = 340
  YSIZE = 300
  XLOC  = (DIMS[0]/2)-(XSIZE/2)
  YLOC  = (DIMS[1]/2)-(YSIZE/2)
  CFIG_DATA = GET_DIMITRI_CONFIGURATION()

;--------------------------
; BUILD UP THE WIDGET

  IF KEYWORD_SET(VERBOSE) THEN PRINT,'DHMI_RAYLEIGH_MAG: DEFINING THE WIDGET BUTTONS AND FSC FIELDS'

  DHMI_RAYLEIGH_MAG_TLB     = WIDGET_BASE(COLUMN=1,TITLE=GET_DIMITRI_LOCATION('TOOL')+': RAYLEIGH CALIBRATION',XSIZE=XSIZE,XOFFSET=XLOC,YOFFSET=YLOC)
  DHMI_RAYLEIGH_MAG_TLB_FRM = WIDGET_BASE(DHMI_RAYLEIGH_MAG_TLB, COLUMN=1,FRAME=1)
  DHMI_RAYLEIGH_MAG_TLB_PAR = WIDGET_BASE(DHMI_RAYLEIGH_MAG_TLB_FRM, ROW=5,/ALIGN_LEFT)

  DHMI_RAYLEIGH_MAG_TLB_PAR_LBL = WIDGET_LABEL(DHMI_RAYLEIGH_MAG_TLB_PAR,VALUE='CALIBRATION PARAMETERS : ')
  DHMI_RAYLEIGH_MAG_TLB_PAR_TMP   = WIDGET_LABEL(DHMI_RAYLEIGH_MAG_TLB_PAR,VALUE='')
  DHMI_RAYLEIGH_MAG_TLB_PAR_TMP   = WIDGET_LABEL(DHMI_RAYLEIGH_MAG_TLB_PAR,VALUE='')

  IF WIN_FLAG THEN DHMI_RAYLEIGH_MAG_TLB_PAR_VSID  = FSC_FIELD(DHMI_RAYLEIGH_MAG_TLB_PAR, TITLE='OCEAN SITE NAME   : ', VALUE=FIRST_SITE, OBJECT=VSITE,/NOEDIT) $
    ELSE DHMI_RAYLEIGH_MAG_TLB_PAR_VSID  = FSC_FIELD(DHMI_RAYLEIGH_MAG_TLB_PAR, TITLE='OCEAN SITE NAME : ', VALUE=FIRST_SITE, OBJECT=VSITE,/NOEDIT)
  DHMI_RAYLEIGH_MAG_TLB_PAR_TMP   = WIDGET_BUTTON(DHMI_RAYLEIGH_MAG_TLB_PAR,VALUE='<',UVALUE= 'SITE<',EVENT_PRO='DHMI_RAYLEIGH_MAG_CHANGE')
  DHMI_RAYLEIGH_MAG_TLB_PAR_TMP   = WIDGET_BUTTON(DHMI_RAYLEIGH_MAG_TLB_PAR,VALUE='>',UVALUE= 'SITE>',EVENT_PRO='DHMI_RAYLEIGH_MAG_CHANGE')  
  
  IF WIN_FLAG THEN DHMI_RAYLEIGH_MAG_TLB_PAR_SNID  = FSC_FIELD(DHMI_RAYLEIGH_MAG_TLB_PAR, TITLE='SENSOR NAME         : ', VALUE=FIRST_SENSOR, OBJECT=SNAME,/NOEDIT) $
    ELSE DHMI_RAYLEIGH_MAG_TLB_PAR_SNID  = FSC_FIELD(DHMI_RAYLEIGH_MAG_TLB_PAR, TITLE='SENSOR NAME      : ', VALUE=FIRST_SENSOR, OBJECT=SNAME,/NOEDIT)
  DHMI_RAYLEIGH_MAG_TLB_PAR_TMP   = WIDGET_BUTTON(DHMI_RAYLEIGH_MAG_TLB_PAR,VALUE='<',UVALUE= 'NAME<',EVENT_PRO='DHMI_RAYLEIGH_MAG_CHANGE')
  DHMI_RAYLEIGH_MAG_TLB_PAR_TMP   = WIDGET_BUTTON(DHMI_RAYLEIGH_MAG_TLB_PAR,VALUE='>',UVALUE= 'NAME>',EVENT_PRO='DHMI_RAYLEIGH_MAG_CHANGE')    

  IF WIN_FLAG THEN DHMI_RAYLEIGH_MAG_TLB_PAR_PVID  = FSC_FIELD(DHMI_RAYLEIGH_MAG_TLB_PAR, TITLE='PROC VERSION        : ', VALUE=FIRST_PROC, OBJECT=PROCV,/NOEDIT) $
    ELSE DHMI_RAYLEIGH_MAG_TLB_PAR_PVID  = FSC_FIELD(DHMI_RAYLEIGH_MAG_TLB_PAR, TITLE='PROC VERSION : ', VALUE=FIRST_PROC, OBJECT=PROCV,/NOEDIT)
  DHMI_RAYLEIGH_MAG_TLB_PAR_TMP   = WIDGET_BUTTON(DHMI_RAYLEIGH_MAG_TLB_PAR,VALUE='<',UVALUE= 'PROC<',EVENT_PRO='DHMI_RAYLEIGH_MAG_CHANGE')
  DHMI_RAYLEIGH_MAG_TLB_PAR_TMP   = WIDGET_BUTTON(DHMI_RAYLEIGH_MAG_TLB_PAR,VALUE='>',UVALUE= 'PROC>',EVENT_PRO='DHMI_RAYLEIGH_MAG_CHANGE')      

  IF WIN_FLAG THEN DHMI_RAYLEIGH_MAG_TLB_PAR_YEAR  = FSC_FIELD(DHMI_RAYLEIGH_MAG_TLB_PAR, TITLE='YEAR                         : ', VALUE=FIRST_YEAR, OBJECT=YEARV,/NOEDIT) $
    ELSE DHMI_RAYLEIGH_MAG_TLB_PAR_YEAR  = FSC_FIELD(DHMI_RAYLEIGH_MAG_TLB_PAR, TITLE='YEAR :         ', VALUE=FIRST_YEAR, OBJECT=YEARV,/NOEDIT)
  DHMI_RAYLEIGH_MAG_TLB_PAR_TMP   = WIDGET_BUTTON(DHMI_RAYLEIGH_MAG_TLB_PAR,VALUE='<',UVALUE= 'YEAR<',EVENT_PRO='DHMI_RAYLEIGH_MAG_CHANGE')
  DHMI_RAYLEIGH_MAG_TLB_PAR_TMP   = WIDGET_BUTTON(DHMI_RAYLEIGH_MAG_TLB_PAR,VALUE='>',UVALUE= 'YEAR>',EVENT_PRO='DHMI_RAYLEIGH_MAG_CHANGE')
  
  DHMI_RAYLEIGH_MAG_TLB_BTM = WIDGET_BASE(DHMI_RAYLEIGH_MAG_TLB, ROW=1,/ALIGN_RIGHT)  
  
  DHMI_RAYLEIGH_MAG_TLB_BTM_BTN   = WIDGET_BUTTON(DHMI_RAYLEIGH_MAG_TLB_BTM,VALUE='PROCESS',UVALUE='PROCESS',EVENT_PRO='DHMI_RAYLEIGH_MAG_PROCESS')
  DHMI_RAYLEIGH_MAG_TLB_BTM_BTN   = WIDGET_BUTTON(DHMI_RAYLEIGH_MAG_TLB_BTM,VALUE='CLOSE',EVENT_PRO='DHMI_RAYLEIGH_MAG_EXIT')

;--------------------------
; STORE IMPORTANT INFORMATION IN A STRUCTURE
  
  IF KEYWORD_SET(VERBOSE) THEN PRINT,'DHMI_RAYLEIGH_MAG: STORING ALL INFORMATION FOR WIDGET'  
  DHMI_RAYLEIGH_MAG_INFO = {                                  $
                      DIMS          : DIMS              ,$
                      CDIR          : CDIR              ,$
