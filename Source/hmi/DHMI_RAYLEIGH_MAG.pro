PRO DHMI_RAYLEIGH_MAG_PROCESS,EVENT

COMMON DHMI_DATABASE

;--------------------------
; GET EVENT AND WIDGET INFO

  WIDGET_CONTROL, EVENT.TOP,  GET_UVALUE=DHMI_RAYLEIGH_MAG_INFO, /NO_COPY
  WIDGET_CONTROL, EVENT.ID,   GET_UVALUE=ACTION

;--------------------------
; GET THE REQUIRED DATA VALUES

  IF DHMI_RAYLEIGH_MAG_INFO.IVERBOSE EQ 1 THEN PRINT, 'DHMI_RAYLEIGH_MAG->PROCESS: RETRIEVING THE REQUIRED VARIABLES FOR INGESTION'
  DHMI_RAYLEIGH_MAG_INFO.VSITE->GETPROPERTY,VALUE=INGEST_REGION
  DHMI_RAYLEIGH_MAG_INFO.SNAME->GETPROPERTY,VALUE=INGEST_SENSOR 
  DHMI_RAYLEIGH_MAG_INFO.PROCV->GETPROPERTY,VALUE=INGEST_PROC_VER
  DHMI_RAYLEIGH_MAG_INFO.YEARV->GETPROPERTY,VALUE=INGEST_YEAR
  ;DHMI_RAYLEIGH_MAG_INFO.CLTAB->GETPROPERTY,VALUE=COLOUR_TABLE
  ;DHMI_RAYLEIGH_MAG_INFO.PLTX->GETPROPERTY,VALUE=PLOT_XSIZE
  ;DHMI_RAYLEIGH_MAG_INFO.PLTY->GETPROPERTY,VALUE=PLOT_YSIZE
  IF INGEST_YEAR NE 'ALL' THEN IYEAR = INGEST_YEAR ELSE ACTION='ALL'

;--------------------------
;CREATE NEW POP DISPLAY WIDGET

  IF DHMI_RAYLEIGH_MAG_INFO.IVERBOSE EQ 1 THEN PRINT, 'DHMI_RAYLEIGH_MAG->PROCESS: CREATING A POP DISPLAY'
  XSIZE = 200
  YSIZE = 60
  XLOC  = (DHMI_RAYLEIGH_MAG_INFO.DIMS[0]/2)-(XSIZE/2)
  YLOC  = (DHMI_RAYLEIGH_MAG_INFO.DIMS[1]/2)-(YSIZE/2)

  INFO_WD = WIDGET_BASE(COLUMN=1, XSIZE=XSIZE, YSIZE=YSIZE, TITLE='Please Wait...',XOFFSET=XLOC,YOFFSET=YLOC)
  LBLTXT = WIDGET_LABEL(INFO_WD,VALUE=' ')
  LBLTXT = WIDGET_LABEL(INFO_WD,VALUE='Please wait while')
  LBLTXT = WIDGET_LABEL(INFO_WD,VALUE='file reading in progress...')
  WIDGET_CONTROL, INFO_WD, /REALIZE
  WIDGET_CONTROL, /HOURGLASS

;--------------------------
; CALL INGEST INTERFACE

  IF DHMI_RAYLEIGH_MAG_INFO.IVERBOSE EQ 1 THEN PRINT, 'DHMI_RAYLEIGH_MAG->PROCESS: CALLING THE INGESTION INTERFACE ROUTINE'
  CASE ACTION OF
    'PROCESS':  RES = DIMITRI_INTERFACE_RAYLEIGH(INGEST_REGION,INGEST_SENSOR,INGEST_PROC_VER,YEAR=IYEAR,VERBOSE=DHMI_RAYLEIGH_MAG_INFO.IVERBOSE)

    'ALL':      RES = DIMITRI_INTERFACE_RAYLEIGH(INGEST_REGION,INGEST_SENSOR,INGEST_PROC_VER,/ALL,YEAR=IYEAR,VERBOSE=DHMI_RAYLEIGH_MAG_INFO.IVERBOSE)
  ENDCASE

;--------------------------
; CLOSE DISPLAY WIDGET AND REPORT STATUS

  IF DHMI_RAYLEIGH_MAG_INFO.IVERBOSE EQ 1 THEN PRINT, 'DHMI_RAYLEIGH_MAG->PROCESS: DESTROYING THE POP DISPLAY'
  WIDGET_CONTROL,INFO_WD,/DESTROY
  WAIT,0.5

  IF DHMI_RAYLEIGH_MAG_INFO.IVERBOSE EQ 1 THEN PRINT, 'DHMI_RAYLEIGH_MAG->PROCESS: USE OUTPUT TO IDENTIFY CLOSING MESSAGE'
  CASE RES OF
    -1: MSG = ['One or more errors encountered','Please check database file and output plots']
     0: MSG = ['No Rayleigh products found']
     1: MSG = ['Successful']
  ENDCASE
  TMP = DIALOG_MESSAGE(['Rayleigh Calibration Process : ','',MSG],/INFORMATION,/CENTER)


;--------------------------
; RETURN TO INGEST WIDGET 

  IF DHMI_RAYLEIGH_MAG_INFO.IVERBOSE EQ 1 THEN PRINT, 'DHMI_RAYLEIGH_MAG->PROCESS: RETURNING TO THE INGEST WIDGET'  
  WIDGET_CONTROL, EVENT.TOP, SET_UVALUE=DHMI_RAYLEIGH_MAG_INFO, /NO_COPY

END

