PRO DHMI_RAYLEIGH_MAG_CHANGE,EVENT

;--------------------------
; GET EVENT AND WIDGET INFO

  WIDGET_CONTROL, EVENT.TOP,  GET_UVALUE=DHMI_RAYLEIGH_MAG_INFO, /NO_COPY
  WIDGET_CONTROL, EVENT.ID,   GET_UVALUE=ACTION

;--------------------------
; GET ACTION TYPE, P,N,S,C,Y

  IF DHMI_RAYLEIGH_MAG_INFO.IVERBOSE EQ 1 THEN PRINT, 'DHMI_RAYLEIGH_MAG->CHANGE: RETRIEVING ACTION TYPE'
  ACTION_TYPE = STRMID(ACTION,0,1)
  CASE ACTION_TYPE OF

;--------------------------
; UPDATE PROCESSING VERSION FIELD

  'P':  BEGIN
          IF DHMI_RAYLEIGH_MAG_INFO.IVERBOSE EQ 1 THEN PRINT, 'DHMI_RAYLEIGH_MAG->CHANGE: PROC_VER ACTION TYPE, UPDATING FIELDS'
          CASE ACTION OF
            'PROC<':DHMI_RAYLEIGH_MAG_INFO.PIDX = DHMI_RAYLEIGH_MAG_INFO.PIDX-1
            'PROC>':DHMI_RAYLEIGH_MAG_INFO.PIDX = DHMI_RAYLEIGH_MAG_INFO.PIDX+1
          ENDCASE
     
          IF DHMI_RAYLEIGH_MAG_INFO.PIDX LT 0 THEN DHMI_RAYLEIGH_MAG_INFO.PIDX = DHMI_RAYLEIGH_MAG_INFO.NPROC-1
          IF DHMI_RAYLEIGH_MAG_INFO.PIDX EQ DHMI_RAYLEIGH_MAG_INFO.NPROC THEN DHMI_RAYLEIGH_MAG_INFO.PIDX = 0
          DHMI_RAYLEIGH_MAG_INFO.PROCV->SETPROPERTY, VALUE=STRMID(DHMI_RAYLEIGH_MAG_INFO.PROC_SEARCH[DHMI_RAYLEIGH_MAG_INFO.PIDX],5,STRLEN(DHMI_RAYLEIGH_MAG_INFO.PROC_SEARCH[DHMI_RAYLEIGH_MAG_INFO.PIDX])-5)
        END
        
;--------------------------
; UPDATE SENSOR NAME FIELD

  'N':  BEGIN
          IF DHMI_RAYLEIGH_MAG_INFO.IVERBOSE EQ 1 THEN PRINT, 'DHMI_RAYLEIGH_MAG->CHANGE: SENSOR ACTION TYPE, UPDATING FIELDS'
          CASE ACTION OF
            'NAME<':DHMI_RAYLEIGH_MAG_INFO.SIDX = DHMI_RAYLEIGH_MAG_INFO.SIDX-1
            'NAME>':DHMI_RAYLEIGH_MAG_INFO.SIDX = DHMI_RAYLEIGH_MAG_INFO.SIDX+1
          ENDCASE

          IF DHMI_RAYLEIGH_MAG_INFO.SIDX LT 0 THEN DHMI_RAYLEIGH_MAG_INFO.SIDX = DHMI_RAYLEIGH_MAG_INFO.NSENS-1
          IF DHMI_RAYLEIGH_MAG_INFO.SIDX EQ DHMI_RAYLEIGH_MAG_INFO.NSENS THEN DHMI_RAYLEIGH_MAG_INFO.SIDX = 0
          DHMI_RAYLEIGH_MAG_INFO.SNAME->SETPROPERTY, VALUE=DHMI_RAYLEIGH_MAG_INFO.SENS_SEARCH[DHMI_RAYLEIGH_MAG_INFO.SIDX]
          
          CD, DHMI_RAYLEIGH_MAG_INFO.INPUT_FOLDER+DHMI_RAYLEIGH_MAG_INFO.SITE_SEARCH[DHMI_RAYLEIGH_MAG_INFO.VIDX]+DHMI_RAYLEIGH_MAG_INFO.DL+DHMI_RAYLEIGH_MAG_INFO.SENS_SEARCH[DHMI_RAYLEIGH_MAG_INFO.SIDX]
          SEARCH = FILE_SEARCH('Proc_*',/TEST_DIRECTORY)
          DHMI_RAYLEIGH_MAG_INFO.NPROC = N_ELEMENTS(SEARCH)
          DHMI_RAYLEIGH_MAG_INFO.PROC_SEARCH[0:DHMI_RAYLEIGH_MAG_INFO.NPROC-1] = SEARCH
          DHMI_RAYLEIGH_MAG_INFO.PIDX = 0
          DHMI_RAYLEIGH_MAG_INFO.PROCV->SETPROPERTY, VALUE=STRMID(DHMI_RAYLEIGH_MAG_INFO.PROC_SEARCH[DHMI_RAYLEIGH_MAG_INFO.PIDX],5,STRLEN(DHMI_RAYLEIGH_MAG_INFO.PROC_SEARCH[DHMI_RAYLEIGH_MAG_INFO.PIDX])-5)
        END

;--------------------------
; UPDATE SITE FIELD

  'S':  BEGIN
          IF DHMI_RAYLEIGH_MAG_INFO.IVERBOSE EQ 1 THEN PRINT, 'DHMI_RAYLEIGH_MAG->CHANGE: SITE ACTION TYPE, UPDATING FIELDS'
          CASE ACTION OF
            'SITE<':DHMI_RAYLEIGH_MAG_INFO.VIDX = DHMI_RAYLEIGH_MAG_INFO.VIDX-1
            'SITE>':DHMI_RAYLEIGH_MAG_INFO.VIDX = DHMI_RAYLEIGH_MAG_INFO.VIDX+1
          ENDCASE
          IF DHMI_RAYLEIGH_MAG_INFO.VIDX LT 0 THEN DHMI_RAYLEIGH_MAG_INFO.VIDX = N_ELEMENTS(DHMI_RAYLEIGH_MAG_INFO.SITE_SEARCH)-1
          IF DHMI_RAYLEIGH_MAG_INFO.VIDX EQ N_ELEMENTS(DHMI_RAYLEIGH_MAG_INFO.SITE_SEARCH) THEN DHMI_RAYLEIGH_MAG_INFO.VIDX = 0
          DHMI_RAYLEIGH_MAG_INFO.VSITE->SETPROPERTY, VALUE=STRMID(DHMI_RAYLEIGH_MAG_INFO.SITE_SEARCH[DHMI_RAYLEIGH_MAG_INFO.VIDX],5,STRLEN(DHMI_RAYLEIGH_MAG_INFO.SITE_SEARCH[DHMI_RAYLEIGH_MAG_INFO.VIDX])-5)

          DHMI_RAYLEIGH_MAG_INFO.SIDX = 0
          CD, DHMI_RAYLEIGH_MAG_INFO.INPUT_FOLDER+DHMI_RAYLEIGH_MAG_INFO.SITE_SEARCH[DHMI_RAYLEIGH_MAG_INFO.VIDX]+DHMI_RAYLEIGH_MAG_INFO.DL
          SEARCH = FILE_SEARCH('*',/TEST_DIRECTORY)
          DHMI_RAYLEIGH_MAG_INFO.NSENS = N_ELEMENTS(SEARCH)
          DHMI_RAYLEIGH_MAG_INFO.SENS_SEARCH[0:DHMI_RAYLEIGH_MAG_INFO.NSENS-1] = SEARCH
          DHMI_RAYLEIGH_MAG_INFO.SNAME->SETPROPERTY, VALUE=DHMI_RAYLEIGH_MAG_INFO.SENS_SEARCH[DHMI_RAYLEIGH_MAG_INFO.SIDX]

          CD, DHMI_RAYLEIGH_MAG_INFO.INPUT_FOLDER+DHMI_RAYLEIGH_MAG_INFO.SITE_SEARCH[DHMI_RAYLEIGH_MAG_INFO.VIDX]+DHMI_RAYLEIGH_MAG_INFO.DL+DHMI_RAYLEIGH_MAG_INFO.SENS_SEARCH[DHMI_RAYLEIGH_MAG_INFO.SIDX]
          SEARCH = FILE_SEARCH('Proc_*',/TEST_DIRECTORY)
          DHMI_RAYLEIGH_MAG_INFO.NPROC = N_ELEMENTS(SEARCH)
          DHMI_RAYLEIGH_MAG_INFO.PROC_SEARCH[0:DHMI_RAYLEIGH_MAG_INFO.NPROC-1] = SEARCH
          DHMI_RAYLEIGH_MAG_INFO.PIDX = 0
          DHMI_RAYLEIGH_MAG_INFO.PROCV->SETPROPERTY, VALUE=STRMID(DHMI_RAYLEIGH_MAG_INFO.PROC_SEARCH[DHMI_RAYLEIGH_MAG_INFO.PIDX],5,STRLEN(DHMI_RAYLEIGH_MAG_INFO.PROC_SEARCH[DHMI_RAYLEIGH_MAG_INFO.PIDX])-5)
        END

;--------------------------
; UPDATE YEAR FIELD

  'Y':  BEGIN
          IF DHMI_RAYLEIGH_MAG_INFO.IVERBOSE EQ 1 THEN PRINT, 'DHMI_RAYLEIGH_MAG->CHANGE: YEAR ACTION TYPE, UPDATING FIELDS'
          IYEAR = DHMI_RAYLEIGH_MAG_INFO.YIDX
          CASE ACTION OF
            'YEAR<':IYEAR = IYEAR-1
            'YEAR>':IYEAR = IYEAR+1
          ENDCASE
          IF IYEAR LT 0 THEN IYEAR = DHMI_RAYLEIGH_MAG_INFO.NYEAR-1
          IF IYEAR GT DHMI_RAYLEIGH_MAG_INFO.NYEAR-1 THEN IYEAR = 0
          DHMI_RAYLEIGH_MAG_INFO.YEARV->SETPROPERTY, VALUE=DHMI_RAYLEIGH_MAG_INFO.YEAR_SEARCH[IYEAR]
          DHMI_RAYLEIGH_MAG_INFO.YIDX = IYEAR
        END


  ENDCASE

;--------------------------
; MAKE SURE WE'RE IN THE CORRECT 
; DIRECTORY AND RETURN TO WIDGET

  IF DHMI_RAYLEIGH_MAG_INFO.IVERBOSE EQ 1 THEN PRINT, 'DHMI_RAYLEIGH_MAG->CHANGE: RESETTING CURRENT DIRECTORY AND RETURNING TO THE WIDGET'
  CD,DHMI_RAYLEIGH_MAG_INFO.CDIR
  WIDGET_CONTROL, EVENT.TOP, SET_UVALUE=DHMI_RAYLEIGH_MAG_INFO, /NO_COPY

END

