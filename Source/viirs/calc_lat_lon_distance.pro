FUNCTION CALC_LAT_LON_DISTANCE, LAT, LON

EARTH_RADIUS = 6378137.0
DtoR = 0.0174532925

LAT[0] = LAT[0] * DtoR
LAT[1] = LAT[1] * DtoR
LON[0] = LON[0] * DtoR
LON[1] = LON[1] * DtoR

DISTANCE = EARTH_RADIUS * (ACOS(SIN(LAT[0]) *   SIN(LAT[1]) + COS(LAT[0]) * COS(LAT[1]) * COS(LON[1] - LON[0]))) 

RETURN, DISTANCE

END